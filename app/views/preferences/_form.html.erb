<%= form_for @preference do |f| %>
  <% if @preference.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@preference.errors.count, "error") %> prohibited this preference from being saved:</h2>

      <ul>
        <% @preference.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :course_id, class: "control-label" %>
    <%= f.grouped_collection_select :course_id, @departments, :courses, :name, :id, :label, {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :value, class: "control-label" %>
    <%= f.select :value, Preference.values.keys, {}, {class: "form-control"} %>
  </div>

  <%= f.submit class: "btn btn-default" %>
<% end %>
