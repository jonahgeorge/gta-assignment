<%= form_for @experience, method: :post  do |f| %>
  <% if @experience.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@experience.errors.count, "error") %>
        prohibited this experience from being saved:
      </h2>
      <ul>
        <% @experience.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :skill, class: "control-label" %>
    <%= f.collection_select :skill_id, Skill.all, :id, :name, {}, {class: "form-control"} %>
  </div>

  <div class="form-group">
    <%= f.label :value, class: "control-label" %>
    <%= f.select :value, Experience.values.keys, {}, {class: "form-control"} %>
  </div>

  <div class="form-group">
    <%= f.submit class: "btn btn-default" %>
    <%= link_to 'Back', experiences_path, class: "btn btn-default" %>
  </div>
<% end %>
