<header>
<h2 style="display:inline-block;">Assignment</h2>
<div class="pull-right" style="margin-top: 20px;">
  <%= link_to "Run new assignment", 
    administrator_assignment_path, class: "btn btn-primary" %>
  <%= link_to "Revert to previous assignment", 
    administrator_assignment_path, class: "btn btn-warning" %>
  </div>
</header>

<br>

<style>
td:first-child  {
  min-width: 200px;
} 
td {
  min-width: 75px;
}
</style>

<div class="table-responsive">
  <table class="table">
    <tr>
      <td></td>
      <% @sections.each do |section| %>
        <td><%= section %></td>
      <% end %>
    </tr>

    <% @students.each do |student| %>
      <tr>
        <td><%= student %></td>
        <% @sections.each do |section| %>
          <td>
            <select>
              <option></option>
              <option <%= ["selected='selected'", ""].sample %>>Set</option>
            </select>
          </td>
        <% end %>
      </tr>
    <% end %>

  </table>
</div>
