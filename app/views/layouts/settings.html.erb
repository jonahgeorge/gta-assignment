<!DOCTYPE html>
<html>
  <head>
    <title>GtaAssignment</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body class="<%= controller_name %> <%= action_name %>">

    <%= render "shared/navbar" %>

    <div class="container">
      <% if notice %>
        <div class="alert alert-success" role="alert"><%= notice %></div>
      <% end %>
      <% if alert %>
        <div class="alert alert-danger"><%= alert %></div>
      <% end %>

      <div class="row">
        <div class="col-sm-3">
          <div class="panel panel-default">
            <div class="panel-heading">Personal settings</div>
            <div class="list-group">
              <%= link_to "Profile", settings_profile_path, class: "list-group-item" %>
              <%= link_to "Preferences", settings_preferences_path, class: "list-group-item" %>
              <%= link_to "Skills", settings_skills_path, class: "list-group-item" %>
            </div>
          </div>
        </div>

        <div class="col-sm-9">
          <%= yield %>
        </div>
      </div>
    </div>

  </body>
</html>
