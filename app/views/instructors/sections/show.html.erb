<div class="col-md-8 col-md-offset-2">

<h2><%= @section.course.name %></h2>

<h4>Instructor Preferences</h4>

<div class="list-group">
  <% @section.instructor_preferences.each do |preference| %>
    <div class="list-group-item">
      <span class="label label-default"><%= preference.value %></span>
      <%= preference.student.name %>
      <%= button_to "Remove", instructors_section_instructors_preference_path(@section, preference), method: :delete,
        class: "btn btn-danger btn-xs pull-right", rel: "nofollow",
        data: { type: "script", confirm: "Are you sure?" } %>
    </div>
  <% end %>
</div>

<%= link_to "New preference",
  new_instructors_section_instructors_preference_path(@section),
  { class: "btn btn-primary" } %>

<br>
<br>
<br>

<h4>Required Skills</h4>

<div class="list-group">
  <% @section.course.requirements.each do |requirement| %>
    <div class="list-group-item">
      <span class="label label-default"><%= requirement.value %></span>
      <%= requirement.skill.name %>
      <%= button_to "Remove", instructors_section_requirement_path(@section, requirement), method: :delete,
        class: "btn btn-danger btn-xs pull-right", rel: "nofollow",
        data: { type: "script", confirm: "Are you sure?" } %>
    </div>
  <% end %>
</div>

<%= link_to "New requirement",
  new_instructors_section_requirement_path(@section),
  { class: "btn btn-primary" } %>

</div>
